<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/navigation_bar_item_search">
    <fragment
        android:id="@+id/navigation_bar_item_search"
        android:name="com.filundmoshpit.mymovies.presentation.search.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_navigation_bar_item_search_to_movieCardFragment"
            app:destination="@id/navigation_movie_card_fragment" />
    </fragment>
    <fragment
        android:id="@+id/navigation_bar_item_watch_later"
        android:name="com.filundmoshpit.mymovies.presentation.watch_later.WatchLaterFragment"
        android:label="fragment_watch_later"
        tools:layout="@layout/fragment_watch_later" >
        <action
            android:id="@+id/action_navigation_bar_item_watch_later_to_movieCardFragment"
            app:destination="@id/navigation_movie_card_fragment" />
    </fragment>
    <fragment
        android:id="@+id/navigation_bar_item_favourites"
        android:name="com.filundmoshpit.mymovies.presentation.favourites.FavouritesFragment"
        android:label="fragment_favourites"
        tools:layout="@layout/fragment_favourites" >
        <action
            android:id="@+id/action_navigation_bar_item_favourites_to_movieCardFragment"
            app:destination="@id/navigation_movie_card_fragment" />
    </fragment>
    <fragment
        android:id="@+id/navigation_movie_card_fragment"
        android:name="com.filundmoshpit.mymovies.presentation.movie_card.MovieCardFragment"
        android:label="fragment_movie_card"
        tools:layout="@layout/fragment_movie_card" />
</navigation>