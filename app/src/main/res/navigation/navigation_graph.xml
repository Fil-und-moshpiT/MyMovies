<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/nav_bottom_fragments">
    <fragment
        android:id="@+id/nav_movie_card_fragment"
        android:name="com.filundmoshpit.mymovies.presentation.movie_card.MovieCardFragment"
        android:label="fragment_movie_card"
        tools:layout="@layout/fragment_movie_card" >
        <argument
            android:name="id"
            app:argType="integer" />
    </fragment>
    <navigation android:id="@+id/nav_bottom_fragments"
        app:startDestination="@id/nav_search_fragment">
        <fragment
            android:id="@+id/nav_search_fragment"
            android:name="com.filundmoshpit.mymovies.presentation.search.SearchFragment"
            android:label="fragment_search"
            tools:layout="@layout/fragment_search"/>
        <fragment
            android:id="@+id/nav_watch_later_fragment"
            android:name="com.filundmoshpit.mymovies.presentation.watch_later.WatchLaterFragment"
            android:label="fragment_watch_later"
            tools:layout="@layout/fragment_watch_later"/>
        <fragment
            android:id="@+id/nav_favourites_fragment"
            android:name="com.filundmoshpit.mymovies.presentation.favourites.FavouritesFragment"
            android:label="fragment_favourites"
            tools:layout="@layout/fragment_favourites"/>
        <action
            android:id="@+id/action_nav_bottom_fragments_nav_movie_card_fragment"
            app:destination="@id/nav_movie_card_fragment" />
    </navigation>
</navigation>